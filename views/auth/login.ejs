<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-md-6 mx-auto">

            <%- include('../partials/flash') %>
                <h1 class="text-center">Login</h1>
                <form action="/login" method="POST">
                    <div class="form-group">
                        <label class="form-label" for="username">Username</label>
                        <input type="text" class="form-control" id="username" name="username" id="username"
                            placeholder="username">

                    </div>
                    <div class="form-group">
                        <label class="form-label" for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" id="password"
                            placeholder="password">
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Login</button>

                    <p class="fw-light mt-2">Dont Have an Account , <a href="/signup">Signup</a> </p>
                </form>
        </div>