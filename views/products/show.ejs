<% layout('layouts/boilerplate') -%>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

  <div class ="row">
  
 

  <div class="col-lg-3 mt-3">

    <!-- displaying flash
      <% if (msg && msg.length) { %>
     <div class="alert alert-success" role="alert">
      <strong><%= msg %></strong>
          
           <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
      <% } %> -->
    


  <div class="card" style="width: 18rem;">
  <img src="<%=foundProduct.imageUrl%>" class="card-img-top" alt="...">
  <div class="card-body">
  <h2 class="card-title">$<%=foundProduct.price%></h2>
  <h5 class="card-title"><%=foundProduct.name%></h5>

 <a href="/products/<%=foundProduct._id%>/edit" class="btn btn-sm btn-light">Edit</a>
  <a href="#" class="btn btn-sm btn-secondary">Add to Cart</a>
  <a href="#" class="btn btn-sm btn-primary">Buy Product</a>
  </div>
  </div>
  </div>
  <div class="col-lg-8 mt-3">
  <h1 class="="display-6">Leave a Review</h1>
  <form action="/products/<%=foundProduct._id%>/review" method="POST">
    <div class ="mb-3">
      <fieldset class="starability-basic">
  <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="rating" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="rating" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="rating" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="rating" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="rating" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>

    </div>

    <div class ="mb-3">
      <label class= "form-label" for="comment">Comments:</label>
      <textarea class="form-control"  rows="3" name="comment" id="comment"></textarea>
     
    </div>
    <button class="btn btn-sm btn-success" type="submit">Add Review</button>
  </form>


  <div class="my-3">
    <% for(let review of foundProduct.review){ %>
      <div class="card">
          <p>
    <% if (review.createdAt){ %>
      <%= review.createdAt.toDateString() %>
    <% } %>
  </p>

  <p class="starability-result" data-rating="<%=review.rating %>">
    Rated:<%=review.rating %> stars
  </p>

  <div class="card-body">
    <p class="card-text">Comment: <%=review.comment %></p>
    <a href="#" class="btn btn-primary">Delete</a>
  </div>

</div>
   <% } %>
  </div>
</div>

</body>
</html>